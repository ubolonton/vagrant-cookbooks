description "Start the twistd process that serves warp webapps"
author "Hoang Xuan Phu <phunehehe@gmail.com>"

start on runlevel [2345]
stop on runlevel [06]

exec twistd \
    -u`id -u vagrant` \
    -g`id -g vagrant` \
    --pidfile=<%= @site_dir %>/twistd.pid \
    --logfile=<%= @site_dir %>/twistd.log \
    -n warp \
    --siteDir=<%= @site_dir %>

respawn
